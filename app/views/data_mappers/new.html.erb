<div class="page-header"><h1>Upload csv file for mapping</h1></div>
<div class="data_mapper_form">
  <%= form_for @data_mapper, html: { multipart: true } do |f| %>
    <% if @data_mapper.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@data_mapper.errors.count, "error")} prohibited this file from being saved:" %>
        </h2>
        <ul>
          <% @data_mapper.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :file_type %>
      <%= f.select :file_type, options_for_select(DataMapper::FILE_TYPE_OPTIONS), prompt: 'Choose type', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :original_file %>
      <%= f.file_field :original_file, class: 'form-control' %>
    </div>

    <div class="form-group">
          <%= f.submit 'Upload file', class: 'btn btn-default' %>
      </div>
  <% end %>
</div>
